<% count = event.people.count %>
    
<li style="padding-left: 58px;" class='<%= "subscribed" if event.subscribed?(current_person) %>'>

  <%= link_to event do %>
    
    <%= image_tag("#{event.owner.image_url}", :style => "padding-right: 10px;", :clear => "both") %>
    
    <span class="countdown" data-time='<%= event.time %>'></span>
    <%= event.owner.first_name %> is going to <%= event.location %>
    <%= count_description( event ) %>
    
  <% end %>

</li>
