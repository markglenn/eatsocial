<div data-theme="g"> 

<div data-role="header" data-position="fixed">
  <h1>Signal Booth</h1>
</div>
 
<ul data-role="listview">

  <% @events.each do |e| %>
    <% count = e.people.count %>
    <li>
      <%= link_to e do %>
        <div style="float:left !important; padding-right: 10px;" clear="both">
          <%= image_tag("#{e.owner.image_url}") %>
        </div>
  
        <span class="countdown" data-time='<%= e.time %>'>5min</span> 
        <%= e.owner.first_name %> is going to <%= e.location %>
        <% if count > 1 %>
          with <%= pluralize( count - 1, "person" ) %>
        <% end %>
      <% end %>
    </li>
  <% end %>

</ul>


</div>
