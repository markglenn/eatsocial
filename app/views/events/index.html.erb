<div data-theme="g"> 

<div data-role="header" data-position="fixed">
  <h1>Signal Booth</h1>
</div>
 
<ul data-role="listview">

  <% @events.each do |e| %>
    <li>
      <%= link_to e do %>
        <span class="countdown" data-time='<%= e.time %>'></span> 
        <%= e.people.first.first_name %> is going to <%= e.location %>
      <% end %>
  </li>
  <% end %>

</ul>


</div>
