<p id="notice"><%= notice %></p>

<p>
  <b>Location:</b>
  <%= @event.location %>
</p>

<p>
  <b>Time:</b>
  <%= @event.time %>
</p>

<p>
  <b>Image location:</b>
  <%= @event.image_location %>
</p>

<% if @event.owner == current_person %>
  <%= button_to 'Delete this event?', @event, :method => :delete %>
<% elsif @event.people.exists?(current_person) %>
  <%= button_to 'Unregister', { :action => 'unsubscribe', :id => @event.id }, :method => :post %>
<% else %>
  <%= button_to 'Register', { :action => 'subscribe', :id => @event.id }, :method => :post, :remote => true %>
<% end %>

<br />

<% if @event.owner == current_person %>
<%= link_to 'Edit', edit_event_path(@event) %> |
<% end %>
<%= link_to 'Back', events_path %>
